<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_margin="10dp"
                android:textSize="29dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro de EmpresÃ¡rio"/>
            <EditText
                android:id="@+id/EmpresarioNome"
                android:hint="Digite aqui o seu Nome completo"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_margin="10dp"
                android:id="@+id/EmpresarioEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Digite aqui o seu E-mail"
                android:inputType="textEmailAddress" />

            <EditText
                android:layout_margin="10dp"
                android:id="@+id/EmpresarioPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Digite o seu numero de Telefone"
                android:inputType="phone" />

            <Spinner
                android:id="@+id/EmpresarioEstado"
                android:entries="@array/estadosBR"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.06" />

            <Button
                android:onClick="EmpresarioCadastrado"
                android:textColor="#fff"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/EmpresarioColor"
                android:text="Cadastrar"/>


        </LinearLayout>


    </ScrollView>

</LinearLayout>