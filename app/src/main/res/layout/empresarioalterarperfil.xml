<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30sp">


        <EditText
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/cidadeAlterarEmpresario"
            android:layout_width="258dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Digite aqui a sua cidade"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bairroAlterarEmpresario"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/registroAlterarEmpresario"
            android:layout_width="258dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Numero de registro FIFA"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/empresaAlterarEmpresario"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/empresaAlterarEmpresario"
            android:layout_width="258dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Nome da sua empresa"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/celularAlterarEmpresario"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/celularAlterarEmpresario"
            android:layout_width="258dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Digite aqui o seu celular"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/cepAlterarEmpresario"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/cepAlterarEmpresario"
            android:layout_width="258dp"
            android:layout_height="40dp"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:hint="Digite aqui o seu CEP"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/spinner5"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/nomeAlterarEmpresario"
            android:layout_width="258dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="Digite o seu nome completo"
            android:inputType="textPersonName"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/textView57" />

        <EditText
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/emailAlterarEmpresario"
            android:layout_width="258dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Digite aqui o seu e-mail"
            android:inputType="textEmailAddress|textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/nomeAlterarEmpresario"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/bairroAlterarEmpresario"
            android:layout_width="258dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Digite aqui o seu bairro"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/enderecoAlterarEmpresario"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/dataAlterarEmpresario"
            android:layout_width="258dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Data de nascimento"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/emailAlterarEmpresario"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/enderecoAlterarEmpresario"
            android:layout_width="258dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Digite aqui o seu endereÃ§o"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/dataAlterarEmpresario"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView56"
            android:layout_width="163dp"
            android:layout_height="39dp"
            android:text="Selecione o seu Estado"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/cidadeAlterarEmpresario"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/spinner5"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="25sp"
            android:id="@+id/textView57"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alterar perfil"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <Spinner
            android:textColor="#fff"
            android:entries="@array/estadosBR"
            android:id="@+id/spinner5"
            android:layout_width="93dp"
            android:layout_height="53dp"
            android:layout_marginRight="51dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cidadeAlterarEmpresario" />

        <Button
            android:onClick="AlterarDadosPerfilEmpresario"
            android:id="@+id/button2"
            android:layout_width="258dp"
            android:layout_height="54dp"
            android:layout_marginBottom="30sp"
            android:text="Alterar"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/registroAlterarEmpresario"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.494" />

        <TextView
            android:onClick="VoltarParaPerfilEmpresario"
            android:id="@+id/textView59"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#6ff1ff"
            android:text="Voltar"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


</ScrollView>