<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_margin="10dp"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro de Jogador"/>
            <EditText
                android:id="@+id/JogadorNome"
                android:text="Nome1"
                android:hint="Digite aqui o seu Nome completo"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:text="email@email.com"
                android:layout_margin="10dp"
                android:id="@+id/JogadorEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Digite aqui o seu E-mail"
                android:inputType="textEmailAddress" />

            <EditText
                android:text="1996"
                android:layout_margin="10dp"
                android:id="@+id/JogadorYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Digite o seu ano de Nascimento"
                android:inputType="number" />

            <EditText
                android:text="371115552"
                android:layout_margin="10dp"
                android:id="@+id/RG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Digite o seu RG aqui"
                android:inputType="number" />

            <Spinner
                android:id="@+id/JogadoEstado"
                android:layout_margin="10dp"
                android:entries="@array/estadosBR"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.06" />

            <Button
                android:textStyle="bold"
                android:onClick="JogadorCadastrado"
                android:textColor="#006fbf"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/JogadorColor"
                android:text="Cadastrar"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>