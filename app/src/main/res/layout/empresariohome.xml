<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Procurar Talentos"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageButton2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton2"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton2"
        app:layout_constraintHorizontal_bias="0.481" />

    <ImageButton
        android:onClick="procurarTalentos"
        android:id="@+id/imageButton2"
        android:layout_width="159dp"
        android:layout_height="161dp"
        app:srcCompat="@mipmap/jogadornovo"
        android:layout_marginLeft="101dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="98dp" />

    <TextView
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerenciar Oportunidades"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton5"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/imageButton5"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton5" />

    <ImageButton
        android:onClick="gerenciarOportunidades"
        android:id="@+id/imageButton5"
        android:layout_width="156dp"
        android:layout_height="151dp"
        app:srcCompat="@mipmap/opt2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toTopOf="@+id/textView44"
        android:layout_marginTop="8dp" />

    <ImageView
        android:onClick="empresarioPerfil"
        android:id="@+id/imageButton6"
        android:layout_width="46dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/perfilicon"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_editor_absoluteX="298dp" />


</android.support.constraint.ConstraintLayout>