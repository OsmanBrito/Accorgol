<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80sp">

        <ImageView
            android:id="@+id/fotoConquista"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textoAddFotoConquista" />

        <ImageButton
            android:id="@+id/addFotoConquista"
            android:layout_width="104dp"
            android:layout_height="84dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/icadd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textoAddFotoConquista" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="2dp"
            android:text="Adicione uma foto da sua conquista. "
            app:layout_constraintEnd_toEndOf="@+id/fotoConquista"
            app:layout_constraintTop_toBottomOf="@+id/addFotoConquista" />

        <TextView
            android:id="@+id/textoAddFotoConquista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="16dp"
            android:text="Adicionar uma Conquista"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nomeConquistaInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fotoConquista">

            <EditText
                android:id="@+id/nomeConquista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nome da conquista. Ex: Artilheiro" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nomeClubeConquistaInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomeConquistaInput">

            <EditText
                android:id="@+id/nomeClubeConquista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Clube onde atuou" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/anoConquistaInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomeClubeConquistaInput">

            <EditText
                android:id="@+id/anoConquista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Ano da conquista"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/addItemConquista"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="8dp"
            app:bootstrapBrand="primary"
            app:bootstrapText="Adicionar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/anoConquistaInput" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>