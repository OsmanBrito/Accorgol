<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20sp">

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/visualizarFotoDadosPessoais"
            android:layout_width="121dp"
            android:layout_height="138dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Dados pessoais"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView96"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:text="Nome: "
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/visualizarNomeJogadorPerfil"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visualizarFotoDadosPessoais" />

        <TextView
            android:id="@+id/visualizarNomeJogadorPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome muito longo da Silva"
            android:textSize="15sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView96" />

        <TextView
            android:id="@+id/textView98"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:text="Posição: "
            android:textSize="15sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/visualizarPosicaoJogadorPerfil"
            app:layout_constraintEnd_toStartOf="@+id/visualizarPosicaoJogadorPerfil"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/visualizarPosicaoJogadorPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:layout_marginTop="11dp"
            android:text="Posição do jogador"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView98"
            app:layout_constraintTop_toBottomOf="@+id/visualizarNomeJogadorPerfil" />

        <TextView
            android:id="@+id/textView100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pé dominante: "
            android:textSize="15sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/visualizarPeJogadorPerfil"
            app:layout_constraintStart_toStartOf="@+id/textView98" />

        <TextView
            android:id="@+id/visualizarPeJogadorPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Destro"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/textView102"
            app:layout_constraintStart_toEndOf="@+id/textView102"
            app:layout_constraintTop_toBottomOf="@+id/visualizarPosicaoJogadorPerfil" />

        <TextView
            android:id="@+id/textView102"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Ano de nascimento: "
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/textView100"
            app:layout_constraintTop_toBottomOf="@+id/textView100" />

        <TextView
            android:id="@+id/visualizarAnoPerfilJogador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:text="1900"
            android:textSize="15sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView102"
            app:layout_constraintStart_toEndOf="@+id/textView102" />

        <TextView
            android:id="@+id/textView104"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:text="RG: "
            android:textSize="15sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/visualizarRGPerfilJogador"
            app:layout_constraintStart_toStartOf="@+id/textView102" />

        <TextView
            android:id="@+id/visualizarRGPerfilJogador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="7dp"
            android:text="12345678-9"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/textView104"
            app:layout_constraintTop_toBottomOf="@+id/textView102" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>