<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:tag="cards main container"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="11dp"
        card_view:cardBackgroundColor="#fff"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            card_view:layout_constraintEnd_toStartOf="@+id/texss4"
            card_view:layout_constraintStart_toStartOf="@+id/texss4">

            <ImageButton
                android:id="@+id/atualizarOportunidade"
                android:layout_width="31dp"
                android:layout_height="29dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:src="@android:drawable/ic_menu_edit"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/excluirOportunidade"
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="#ff0000"
                android:src="@android:drawable/ic_menu_delete"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posição:"
                android:textStyle="bold"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/posicaOportunidade"
                card_view:layout_constraintEnd_toEndOf="@+id/texss"
                card_view:layout_constraintStart_toEndOf="@+id/texss" />

            <TextView
                android:id="@+id/posicaOportunidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="8dp"
                android:text="Zagueiro"
                card_view:layout_constraintBottom_toTopOf="@+id/anoNascimentoOportunidade"
                card_view:layout_constraintStart_toEndOf="@+id/textView38" />

            <TextView
                android:id="@+id/textView64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="7dp"
                android:text="Pé Dominante"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toTopOf="@+id/texsss"
                card_view:layout_constraintEnd_toStartOf="@+id/peDominanteOportunidade" />

            <TextView
                android:id="@+id/peDominanteOportunidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Destro"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/textView64"
                card_view:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/texss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Ano:"
                android:textStyle="bold"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/anoNascimentoOportunidade"
                card_view:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/anoNascimentoOportunidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="8dp"
                android:text="1990"
                card_view:layout_constraintBottom_toTopOf="@+id/texs2s"
                card_view:layout_constraintStart_toEndOf="@+id/texss" />

            <TextView
                android:id="@+id/texsss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Altura min:"
                android:textStyle="bold"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/alturaOportunidade"
                card_view:layout_constraintStart_toStartOf="@+id/textView64" />

            <TextView
                android:id="@+id/alturaOportunidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="8dp"
                android:text="1,65"
                card_view:layout_constraintBottom_toTopOf="@+id/cidadeOportunidade"
                card_view:layout_constraintStart_toEndOf="@+id/texsss" />

            <TextView
                android:id="@+id/texs2s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Estado:"
                android:textStyle="bold"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/estadoOportunidade"
                card_view:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/estadoOportunidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="RS"
                card_view:layout_constraintBottom_toBottomOf="@+id/texss4"
                card_view:layout_constraintStart_toEndOf="@+id/texs2s"
                card_view:layout_constraintTop_toTopOf="@+id/texss4" />

            <TextView
                android:id="@+id/texss4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade: "
                android:textStyle="bold"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/cidadeOportunidade"
                card_view:layout_constraintStart_toStartOf="@+id/texsss" />

            <TextView
                android:id="@+id/cidadeOportunidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:text="Santa Maria"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/texss4" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>