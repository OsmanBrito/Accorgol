<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="262dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:text="Cadastro de Jogador"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/bootstrapButton4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/bootstrapButton4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:bootstrapSize="xl"
            android:layout_marginBottom="71dp"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:onClick="CadastrarJogador"
            android:text="Cadastrar"
            android:textStyle="bold"
            app:bootstrapBrand="primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView61" />


        <EditText
            android:id="@+id/cadastroAlturaJogador"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:hint="Digite aqui a sua Altura"
            android:inputType="number"
            android:text="1,60"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView61" />

        <EditText
            android:id="@+id/cadastroCidadeJogador"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Digite a sua cidade"
            android:inputType="textPersonName"
            android:text="Santa Maria"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastroEstadoJogador" />

        <EditText
            android:id="@+id/cadastroCelJogador"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Digite o seu numero de celular"
            android:inputType="textPersonName"
            android:text="55996804455"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastroCidadeJogador" />

        <Spinner
            android:id="@+id/cadastroEstadoJogador"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:entries="@array/estadosBR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView62"
            app:layout_constraintTop_toBottomOf="@+id/cadastroAlturaJogador" />


        <TextView
            android:id="@+id/textView62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:text="Estado"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/cadastroEstadoJogador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastroAlturaJogador" />



    </android.support.constraint.ConstraintLayout>


</ScrollView>